{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "files": [
        "./src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
