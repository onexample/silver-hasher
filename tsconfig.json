{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2022",
        "strict": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
